extends layout

block content
 html
  style.
    input[type=text], input[type=password],input[type=email] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    }
  head
    title Login
    link(rel='stylesheet', href='stylesheets/bootstrap.min.css')
    script(src='javascripts/bootstrap.min.js')
    script(src='javascripts/jquery.js')
    script(src='javascripts/login.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Emotion Detection Application
        ul.nav.navbar-nav
          li.active
            a(href='/') Home
          li
            a(href='/signin') Login
          li
            a(href='/signup') Signup
    .container
      h1 Signin
      fieldset
        legend  Signin 
        form(action='/home', onsubmit='return login()')
          label
            b Username: 
          input#uname(type='text', name='name', placeholder='Enter your full name')
          br
          label
            b Password: 
          input#password(type='password', name='password', placeholder='Enter Password')
          br
          button#loginbtn.btn.btn-success(type='submit', name='lbtn') Login
